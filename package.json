{
  "name": "flow-protocol-ethereum",
  "version": "0.0.2",
  "author": "Bryan Chen <bryan@laminar.one>",
  "private": true,
  "scripts": {
    "generate": "truffle compile && yarn typechain --target truffle \"./build/**/*.json\" && yarn typechain --target web3-1.0.0 \"./build/**/*.json\"",
    "prepare": "yarn generate && cd subgraph && yarn && cross-env NETWORK=kovan yarn codegen",
    "verify": "if [ $NETWORK != 'development' ]\nthen\ntruffle run verify MoneyMarket FlowProtocol FlowToken LiquidityPool SimplePriceOracle FlowMarginProtocol MarginTradingPair --network $NETWORK\nfi",
    "lint": "solium -d contracts/ && eslint --ext .js,.ts subgraph && tsc --noEmit --pretty",
    "test": "truffle test",
    "ganache": "mkdir -p data/ganache && ganache-cli -i 1337 -p 8545 --db=./data/ganache -d -m 'candy maple cake sugar pudding cream honey rich smooth crumble sweet treat' > /dev/null &",
    "stop": "kill `lsof -t -i:8545`",
    "graph-node": "docker-compose up",
    "deploy-local": "sh deploy-local.sh",
    "deploy": "truffle migrate --reset --network $NETWORK --skip-dry-run && yarn verify",
    "deploy:development": "cross-env NETWORK=development yarn deploy",
    "deploy:kovan": "cross-env NETWORK=kovan yarn deploy",
    "deploy:mainnet": "cross-env NETWORK=mainnet yarn deploy"
  },
  "devDependencies": {
    "@openzeppelin/contracts": "^2.3.0",
    "@types/chai": "^4.2.3",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.11.1",
    "@typescript-eslint/eslint-plugin": "^2.4.0",
    "@typescript-eslint/parser": "^2.4.0",
    "chai": "^4.2.0",
    "chai-bn": "^0.2.0",
    "cross-env": "^7.0.2",
    "dotenv": "^8.2.0",
    "eslint": "^6.5.1",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.2",
    "ethlint": "^1.2.5",
    "ganache-cli": "^6.9.0",
    "openzeppelin-test-helpers": "^0.5.1",
    "prettier": "^1.19.1",
    "truffle": "^5.0.40",
    "truffle-contract-size": "^1.0.1",
    "truffle-hdwallet-provider": "^1.0.17",
    "truffle-plugin-verify": "^0.3.4",
    "truffle-typings": "^1.0.8",
    "ts-node": "^8.4.1",
    "typechain": "^0.3.21",
    "typescript": "^3.6.4"
  }
}
