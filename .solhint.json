{
  "extends": "solhint:recommended",
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": "error",
    "compiler-version": ["error", "^0.6.10"],
    "not-rely-on-time": "off",
    "max-line-length": ["error", 150],
    "quotes": ["error", "double"],
    "reason-string": ["error", {"maxLength": 50}],
    "max-states-count": ["warn", 16]
  }
}
